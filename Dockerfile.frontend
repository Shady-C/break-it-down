FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Update npm and install modern dependencies
RUN npm install -g npm@latest && \
    npm install next@latest react@latest react-dom@latest && \
    npm install -D eslint@latest postcss@latest tailwindcss@latest && \
    npm cache clean --force

COPY . .

CMD ["npm", "run", "dev"]
